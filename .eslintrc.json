{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-unused-vars": "off",
        "max-len": ["warn", { "code": 145 }],
        "indent": ["error", 2],
        "linebreaks-style": 0,
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off"
    }
}
